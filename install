#!/usr/bin/env bash

installGo() {
	wget https://dl.google.com/go/go1.17.2.linux-amd64.tar.gz
	tar -xzf go1.17.2.linux-amd64.tar.gz
	export PATH="$PLUGIN_CORE_AVAILABLE_PATH/go/bin"
}

# Install golang binaries if it doesn't exist
installGo

# Create all storage files
echo > hooks
echo > repos
echo > links