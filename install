#!/usr/bin/env bash

installGo() {
	wget https://dl.google.com/go/go1.17.2.linux-amd64.tar.gz
	tar -xzf go1.17.2.linux-amd64.tar.gz
}

# Install golang binaries if it doesn't exist
# installGo

# Export the plugin directory as an environment variable
export CURR_PLUGIN_PATH="$PLUGIN_AVAILABLE_PATH/githook"

# Create all storage files
mkdir "$CURR_PLUGIN_PATH/data"
echo > "$CURR_PLUGIN_PATH/data/hooks"
echo > "$CURR_PLUGIN_PATH/data/repos"
echo > "$CURR_PLUGIN_PATH/data/links"
