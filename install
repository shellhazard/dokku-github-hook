#!/usr/bin/env bash

installGo() {
	wget https://dl.google.com/go/go1.17.2.linux-amd64.tar.gz
	tar -xzf go1.17.2.linux-amd64.tar.gz
}

# Install golang binaries if it doesn't exist
# installGo

# Create all storage files
mkdir "$PLUGIN_AVAILABLE_PATH/githook/data"
echo -n > "$PLUGIN_AVAILABLE_PATH/githook/data/hooks"
echo -n > "$PLUGIN_AVAILABLE_PATH/githook/data/repos"
echo -n > "$PLUGIN_AVAILABLE_PATH/githook/data/links"
