#!/usr/bin/env bash

declare PLUGIN_PATH="$PLUGIN_AVAILABLE_PATH/githook"

addHook() {
	declare webhook=$1
	echo "$webhook " >> "$PLUGIN_PATH/data/hooks"
}

canAddHook() {
	declare webhook=$1
	while read hook; do
		[[ "$webhook" == "$hook" ]] && return 1
	done < "$PLUGIN_PATH/data/hooks"
	return 0
}

removeHook() {
	echo "removed"
}